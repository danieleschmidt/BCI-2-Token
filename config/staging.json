{
  "environment": "staging",
  "debug": false,
  "testing": false,
  "app_name": "bci2token",
  "version": "1.0.0",
  "host": "0.0.0.0",
  "port": 8080,
  "workers": 2,
  "security": {
    "enable_access_control": true,
    "session_timeout": 3600.0,
    "max_concurrent_sessions": 10,
    "max_signal_duration": 300.0,
    "max_signal_amplitude": 1000.0,
    "max_batch_size": 1000,
    "require_privacy_protection": true,
    "min_privacy_epsilon": 0.1,
    "max_privacy_epsilon": 10.0,
    "audit_privacy_usage": true,
    "encrypt_saved_data": false,
    "secure_delete": true,
    "audit_data_access": true,
    "max_requests_per_minute": 200,
    "max_decode_operations_per_hour": 1000,
    "enable_anomaly_detection": true,
    "suspicious_activity_threshold": 10,
    "auto_block_suspicious_ips": true,
    "enable_request_signing": true
  },
  "preprocessing": {
    "sampling_rate": 256,
    "lowpass_freq": 40.0,
    "highpass_freq": 0.5,
    "notch_freq": 60.0,
    "apply_ica": false,
    "ica_n_components": null,
    "apply_car": true,
    "standardize": true,
    "window_size": 1.0,
    "overlap": 0.25
  },
  "max_concurrent_requests": 100,
  "request_timeout": 30.0,
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "bci2token",
    "username": "bci_user",
    "password": "",
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "enable_ssl": true
  },
  "cache": {
    "backend": "memory",
    "host": "localhost",
    "port": 6379,
    "max_size": 500,
    "ttl": 3600.0,
    "enable_clustering": false
  },
  "monitoring": {
    "enable_metrics": true,
    "enable_tracing": true,
    "enable_logging": true,
    "log_level": "INFO",
    "metrics_endpoint": "/metrics",
    "health_endpoint": "/health",
    "enable_profiling": false,
    "alert_webhook_url": ""
  },
  "scaling": {
    "enable_auto_scaling": true,
    "min_workers": 2,
    "max_workers": 16,
    "target_cpu_utilization": 70.0,
    "scale_up_threshold": 80.0,
    "scale_down_threshold": 30.0,
    "cooldown_period": 300.0
  },
  "max_memory_mb": 2048,
  "max_cpu_cores": 4,
  "max_disk_gb": 20,
  "timezone": "UTC",
  "locale": "en_US.UTF-8",
  "enable_cors": true,
  "cors_origins": [
    "*"
  ]
}